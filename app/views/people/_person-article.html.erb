<%= link_to person_path(personid) do %>
  <div class="image-person">
    <%= image_tag(person_image) %>
  </div>
  <div class="introduce-person">
    <h3><%= personid.name %></h3>
    <h4> 出演回数 <%= personid.videos.count %>  回 </h4>
    <p><%=personid.description %></p>
    <div class="person_penalties">
      <% personid.penalties.sample(3).each do |penalty|%>

            <% case penalty.person_id %>
            <% when 1 %>
                <div class="tetsuya btn btn-secondary"> <%= penalty.name %> </div>
            <% when 2 %>
                <div class="shibayu btn btn-secondary"> <%= penalty.name %> </div>
            <% when 3 %>
                <div class="ryo btn btn-secondary"> <%= penalty.name %> </div>
            <% when 4 %>
                <div class="toshimitsu btn btn-secondary"> <%= penalty.name %> </div>
            <% when 5 %>
                <div class="yumemaru btn btn-secondary"> <%= penalty.name %> </div>
            <% when 6 %>
                <div class="mushimegane btn btn-secondary"> <%= penalty.name %> </div>
            <% end %>

      <% end %>
    </div>

  </div> <%# introduce-person %>
<% end %>