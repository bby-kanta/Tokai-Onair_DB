<%= stylesheet_link_tag "videos", :media => "all" %>

<div class="all-contents">

  <div class="video_box">
    <div class="video-youtube">
      <iframe width="100%" height="100%" src="https://www.youtube.com/embed/<%= @video.url %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    </div>

    <div class="video_title">
      <h2> <%= @video.title %> </h2>
    </div>

    <div class="video_date">
      <h4><%= @video.updated_on %> に公開済み </h4>

        <%= link_to '編集',edit_video_path(@video) %>
        <%= link_to '削除',video_path(@video) ,
        method: :delete,
        data: {confirm: '本当に削除しますか？'}
        %>
        
    </div>

    <table border="1px" style="border-collapse: collapse; border-color: rgb(238, 232, 232)">


      <tr class="video-title">
        <th> タイトル </th>
        <th>   
          <h3> <%= @video.title %> </h3>
        </th>
      </tr>

      <tr class="video-description">
        <th> 概要 </th>
        <th>   
          <h3> <%= @video.description %> </h3>
        </th>
      </tr>

      <tr class="video-highlight">
        <th> 見所 </th>
        <th>   
          <h3> <%= @video.highlight %> </h3>
        </th>
      </tr>

      <tr class="video-quotes">
        <th> 名言 </th>
        <th>   
          <h3> <%= @video.quotes %> </h3>
        </th>
      </tr>

      <tr>
        <th> ランク </th>
        <th>
          <div class="video-rate">
            <% case @video.rate %>
              <% when 1 %>
                <h3 class="S"> S </h3>
              <% when 2 %>
                <h3 class="A"> A </h3> 
              <% when 3 %>
                <h3 class="B"> B </h3> 
              <% else %>
                <h3 class="C"> C </h3> 
            <% end %>
          </div>
        </th>
      </tr>

      <tr class="video_kind_of">
        <th> チャンネル種類 </th>
        <th>
          <div class="channel">
            <% case @video.kind_of %>
              <% when 0 %>
                <h3> メインチャンネル </h3>
              <% when 1 %>
                <h3> 東海オンエアの控え室 </h3> 
              <% when 2 %>
                <h3> 個人チャンネル </h3> 
              <% else %>
                <h3> その他のチャンネル </h3> 
            <% end %>
          </div>
        </th>
      </tr>

      <tr>
        <th> カテゴリー </th>
        <th>   
          <div class="video-category">
            <% case @video.category %>
              <% when 0 %>
                <h3> 企画もの </h3>
              <% when 1 %>
                <h3> サブチャン </h3>
              <% when 2 %>
                <h3> コント </h3> 
              <% when 3 %>
                <h3> クイズ </h3>
              <% when 4 %>
                <h3> 選手権 </h3>
              <% when 5 %>
                <h3> 検証系 </h3>
              <% when 6 %>
                <h3> 対決 </h3>
              <% when 7 %>
                <h3> 王 </h3>
              <% when 8 %>
                <h3> 王 </h3>
              <% when 9 %>
                <h3> 旅行 </h3>
              <% when 10 %>
                <h3> 料理 </h3>
              <% when 11 %>
                <h3> スポーツ </h3>
              <% when 12 %>
                <h3> ドッキリ </h3>
              <% when 13 %>
                <h3> ゲーム </h3>
              <% when 14 %>
                <h3> コラボ </h3>
              <% when 99 %>
                <h3> ご飯じゃんけん </h3>
              <% when 98 %>
                <h3> いじわる </h3>
              <% when 97 %>
                <h3> 十字架(サブチャン) </h3>
              <% else %>
                <h3> その他 </h3> 
            <% end %>
          </div>
        </th>
      </tr>

      <tr>
        <th> 登場メンバー </th>
        <th>
          <div class="video-people">
            <% @video.people.each do |person| %>
              <div class="video-person-cast">
                <%= render partial: "person-color-link", locals: { person_kind: person.id } %>
              </div>
            <% end %>
          </div>
        </th>
      </tr>

      <tr class="video-mvp">
        <th> マンオブザマッチ </th>
        <th>
          <div class="video-person-mvp">
            <%= render partial: "person-color-link", locals: { person_kind: @video.mvp } %>
          </div>
        </th>
      </tr>

      <tr>
        <th> 編集者 </th>
        <th>
          <div class="video-person-editor">
            <%= render partial: "person-color-link", locals: { person_kind: @video.editor } %>
          </div>
        </th>
      </tr>

      <tr>
        <th> 罰ゲーム </th>
        <th>
          <div class="video-penalties">
            <% @video.penalties.each do |penalty| %>
              <%= link_to penalty_path(penalty.id) do %>
                <div class="video-penalty">
                  <% case penalty.person.id %>
                    <% when 1 %>
                      <h3 class="tetsuya"> <%= penalty.name %> </h3>
                    <% when 2 %>
                      <h3 class="shibayu"> <%= penalty.name %> </h3>
                    <% when 3 %>
                      <h3 class="ryo"> <%= penalty.name %> </h3> 
                    <% when 4 %>
                      <h3 class="toshimitsu"> <%= penalty.name %> </h3>
                    <% when 5 %>
                      <h3 class="yumemaru"> <%= penalty.name %> </h3>
                    <% when 6 %>
                      <h3 class="mushimegane"> <%= penalty.name %> </h3>
                    <% else %>
                      <h3 class="no-one"> 該当者無し </h3>
                  <% end %>
                </div>
              <% end %>
            <% end %>
          </div>
        </th>
      </tr>

      <tr>
        <th> 撮影場所 </th>
        <th>
          <div class="video-places">
            <% @video.places.each do |place| %>
              <%= link_to place_path(place.id) do %>
                <div class="video-place">
                  <h3> <%= place.name %> </h3>
                </div>
              <% end %>
            <% end %>
          </div>
        </th>
      </tr>

      <tr>
        <th> BGM </th>
        <th>
          <div class="video-musics">
            <% @video.musics.each do |music| %>
              <%= link_to music_path(music.id) do %>
                <div class="video-music">
                  <h3> <%= music.name %> </h3>
                </div>
              <% end %>
            <% end %>
          </div>
        </th>
      </tr>


      <tr>
        <th> ハッシュタグ </th>
        <th> 
          <div class="video-tags">
            <% @video.tags.each do |tag| %>
              <div class="video-tag">
                <%= link_to tag_path(tag.id) do %>
                  <p> <%= tag.name %> </p>
                <% end %>
              </div>
            <% end %>
          </div> <%# video-tags %>
        </th>
      </tr>

      <tr class="video-updated_on">
        <th> アップロード日 </th>
        <th>   
          <%= @video.updated_on %> 
        </th>
      </tr>

    </table>

  </div>


  <div class="related-videos">
    <% @videos.each do |video|%>
      <%= link_to video_path(video.id) do %>
        <div class="video-article">
        
          <div class="article-image">
            <iframe width="100%" height="200px" src="https://www.youtube.com/embed/<%= video.url %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
          </div>

          <div class="article-column">
            <div class="article-title">
              <p class="article_title"><%= video.title %></p>
            </div>

            <div class="article_row">

              <div class="article-rate">
                <% case video.rate %>
                  <% when 1 %>
                    <h3 class="S"> S </h3>
                  <% when 2 %>
                    <h3 class="A"> A </h3> 
                  <% when 3 %>
                    <h3 class="B"> B </h3> 
                  <% else %>
                    <h3 class="C"> C </h3> 
                <% end %>
              </div><%# article-rate %>


              <div class="article-mvp">
                <%= render partial: "person-color", locals: { person_kind: video.mvp } %>
              </div><%# article-mvp %>
              
              <div class="article-tags">
                <% video.tags.shuffle.first(4).each do |tag| %>
                  <div class="article-tag"><h3><%= tag.name %><h3></div>
                <% end %>
              </div>

            </div><%# article_row %>

            <div class="article-date">
              <%= video.updated_on %>
            </div>

          </div><%# article-column %>

        </div><%# video-article %>
      <% end %>
    <% end %>
  </div><%# related-videos %>

</div><%# all-contnts %>